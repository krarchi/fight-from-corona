<section class="container" ng-controller="issueController">
  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column">
      <div class="form-row">
        <div class="col-md-9 mb-3">
          <label for="validationTooltip01">Category</label>
          <select  name="category_id" class="custom-select  custom-select-lg" >
            <option ng-repeat="category in option_categories">{{category.name}}</option>
          </select>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-9 mb-3">
          <label for="validationTooltip01">Sub Category</label>
          <select name="sub_category_id" class="custom-select">
            <option value="category.id" ng-repeat="category in option_categories">{{category.name}}</option>
          </select>
        </div>
      </div>

      <form class="needs-validation" novalidate>
        <div class="form-row">
          <div class="col-md-9 mb-3">
            <label for="validationTooltip01">Issue Name</label>
            <input type="text" class="form-control" id="validationTooltip01" placeholder="Please name your issue" required>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-9 mb-3">
            <label for="validationTooltip01">Issue Description</label>
            <textarea type="text" class="form-control" id="validationTooltip01" placeholder="Please describe your issue" required></textarea>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-9 mb-3">
            <label for="validationTooltip01">Address</label>
            <input type="text" class="form-control" name="address" placeholder="Please provide your address" required>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="validationTooltip03">City</label>
            <input type="text" class="form-control" name="city" placeholder="City" required>
            <div class="invalid-tooltip">
              Please provide a valid city.
            </div>
          </div>

          <div class="col-md-3 mb-3">
            <label for="validationTooltip05">Pincode</label>
            <input type="text" class="form-control" name="pincode" placeholder="Pincode" required>
            <div class="invalid-tooltip">
              Please provide a valid pincode.
            </div>
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Submit Your Issue</button>
      </form>
    </div>

  </div>

</section>
